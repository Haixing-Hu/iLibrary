<?xml version='1.0' encoding='UTF-8'?>
<document>
  <name>journal-article</name>
  <type>article</type>
  <default-kind>article</default-kind>    
  <kinds>
    <kind>article</kind>
    <kind>abstract</kind>
    <kind>commentary</kind>
    <kind>editorial</kind>
    <kind>electronic-article</kind>
    <kind>erratum</kind>
    <kind>extended-abstract</kind>
    <kind>letter</kind>
    <kind>news-and-views</kind>
    <kind>rebuttal</kind>
    <kind>retraction</kind>
    <kind>review</kind>
  </kinds>
  <fields>
    <field>title</field>    
    <field>subtitle</field>   
    <field>original-title</field> 
    <field>authors</field>
    <field>translators</field>
    <field>abstract</field>    
    <field>journal</field>
    <field>volume</field>
    <field>number</field>
    <field>issue</field>
    <field>pages</field>
    <field>submitted-date</field>
    <field>revised-date</field> 
    <field>accepted-date</field>
    <field>published-date</field>
  </fields>
  <csl-mapping>
    <rule>
      <variable>title</variable>
      <expression>title (subtitle ? ": " subtitle)</expression>
    </rule> 
    <rule>
      <variable>author</variable>
      <expression>authors</expression>
    </rule>
    <rule>
      <variable>translator</variable>
      <expression>translators</expression>
    </rule>
    <rule>
      <variable>abstract</variable>
      <expression>abstract</expression>
    </rule>
    <rule>
      <variable>container-title</variable>
      <expression>journal.title</expression>
    </rule>
    <rule>
      <variable>container-title-short</variable>
      <expression>journal.short-title</expression>
    </rule>
    <rule>
      <variable>volume</variable>
      <expression>volume</expression>
    </rule>
    <rule>
      <variable>number</variable>
      <expression>number</expression>
    </rule>
    <rule>
      <variable>issue</variable>
      <expression>issue</expression>
    </rule>
    <rule>
      <variable>page</variable>
      <expression>pages</expression>
    </rule>
    <rule>
      <variable>submitted</variable>
      <expression>submitted-date</expression>
    </rule>
    <rule>
      <variable>issued</variable>
      <expression>published-date</expression>
    </rule>
  </csl-mapping>
</document>