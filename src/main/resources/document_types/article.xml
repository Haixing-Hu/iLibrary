<?xml version="1.0" encoding="UTF-8"?>
<document-type name="journal-article">
	<default-locale>en-US</default-locale>
	<display-name>
		<en-US>Journal Article</en-US>
		<zh-CN>期刊论文</zh-CN>		
	</display-name>
	<classification>article</classification>
	<kinds default="article">
		<kind>
			<name>abstract</name>
			<display-name>
				<en-US>Abstract</en-US>
				<zh-CN>摘要</zh-CN>
			</display-name>
		</kind>
		<kind>
			<name>article</name>
			<display-name>
				<en-US>Article</en-US>
				<zh-CN>论文</zh-CN>
			</display-name>			
		</kind>
		<kind>
			<name>commentary</name>
			<display-name>
				<en-US>Commentary</en-US>
				<zh-CN>解说</zh-CN>
			</display-name>			
		</kind>
		<kind>
			<name>editorial</name>
			<display-name>
				<en-US>Editorial</en-US>
				<zh-CN>社论</zh-CN>
			</display-name>			
		</kind>
		<kind>
			<name>electronic-article</name>
			<display-name>
				<en-US>Electronic Article</en-US>
				<zh-CN>电子文献</zh-CN>
			</display-name>			
		</kind>
		<kind>
			<name>letter</name>
			<display-name>
				<en-US>Letter</en-US>
				<zh-CN>信件</zh-CN>
			</display-name>			
		</kind>
		<kind>
			<name>news-and-views</name>
			<display-name>
				<en-US>News &amp; Views</en-US>
				<zh-CN>新闻观点</zh-CN>
			</display-name>			
		</kind>
		<kind>
			<name>rebuttal</name>
			<display-name>
				<en-US>Rebuttal</en-US>
				<zh-CN>辩驳</zh-CN>
			</display-name>			
		</kind>		
		<kind>
			<name>review</name>
			<display-name>
				<en-US>Review</en-US>
				<zh-CN>评论</zh-CN>
			</display-name>			
		</kind>
	</kinds>
	<fields>
		<field required="true">
			<name>title</name>
			<type>string</type>
			<display-name>
				<en-US>Title</en-US>
				<zh-CN>标题</zh-CN>
			</display-name>
		</field>	
		<field required="true">
			<name>authors</name>
			<type list="true">responsibility</type>
			<display-name>
				<en-US>Authors</en-US>
				<zh-CN>作者</zh-CN>
			</display-name>
		</field>	
		<field>
			<name>abstract</name>
			<type>string</type>
			<display-name>
				<en-US>Abstract</en-US>
				<zh-CN>摘要</zh-CN>
			</display-name>
		</field>
		<field required="true">
			<name>journal</name>
			<type>periodical</type>
			<display-name>
				<en-US>Journal</en-US>
				<zh-CN>期刊</zh-CN>
			</display-name>			
		</field>
		<field>
			<name>number</name>
			<type>integer</type>
			<display-name>
				<en-US>Number</en-US>
				<zh-CN>编号</zh-CN>
			</display-name>			
		</field>
		<field>
			<name>volume</name>
			<type>integer</type>
			<display-name>
				<en-US>Volume</en-US>
				<zh-CN>卷</zh-CN>
			</display-name>			
		</field>
		<field>
			<name>issue</name>
			<type>integer</type>
			<display-name>
				<en-US>Issue</en-US>
				<zh-CN>期</zh-CN>
			</display-name>			
		</field>
		<field>
			<name>pages</name>
			<type>integer</type>
			<display-name>
				<en-US>Pages</en-US>
				<zh-CN>页码</zh-CN>
			</display-name>			
		</field>
		<field>
			<name>submitted-date</name>
			<type>date</type>
			<display-name>
				<en-US>Submitted Date</en-US>
				<zh-CN>提交日期</zh-CN>
			</display-name>			
		</field>
		<field>
			<name>accepted-date</name>
			<type>date</type>
			<display-name>
				<en-US>Accepted Date</en-US>
				<zh-CN>接受日期</zh-CN>
			</display-name>			
		</field>
		<field required="true">
			<name>published-date</name>
			<type>date</type>
			<display-name>
				<en-US>Published Date</en-US>
				<zh-CN>出版日期</zh-CN>
			</display-name>	
		</field>										
	</fields>
</document-type>